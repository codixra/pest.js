#!/bin/bash

# PEST.js - Minimal CLI Entry Point
# Progressive Express Starter Template

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Source utilities
source "$SCRIPT_DIR/core/utils/helpers.sh"

# Source generators
source "$SCRIPT_DIR/core/generators/package.sh"
source "$SCRIPT_DIR/core/generators/config.sh"
source "$SCRIPT_DIR/core/generators/app.sh"

# Source the main CLI functions
source "$SCRIPT_DIR/core/cli/main.sh"

# Run the main function
main "$@" 